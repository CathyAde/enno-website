<section class="hero">
  <div class="hero-container">
    <div class="hero-content">
      <div class="hero-badge">
        <i class="fas fa-bolt"></i>
        <span>Energies Nouvelles (ENNO) - Depuis 2008</span>
      </div>
      <h1 class="hero-title">
        Solutions énergétiques <span class="highlight">durables</span> pour entreprises et particuliers au Congo
      </h1>
      <p class="hero-subtitle">
        Bureau d'étude, travaux neufs et rénovations, contrôle et surveillance : nous sécurisons votre énergie avec des solutions sur mesure.
      </p>
      <div class="hero-actions">
        <a href="/services" class="btn-primary">
          <i class="fas fa-arrow-right"></i>
          Découvrir nos services
        </a>
        <a href="/contact" class="btn-secondary">
          <i class="fas fa-phone"></i>
          Nous contacter
        </a>
      </div>
      <% if (content && content.text) { %>
        <div class="hero-note">
          <i class="fas fa-info-circle"></i>
          <%- content.text %>
        </div>
      <% } %>
    </div>
    <div class="hero-visual">
      <div class="hero-image-container">
        <img src="/images/image 1.jpg" alt="ENNO - Solutions énergétiques" class="hero-image" loading="lazy" />
        <div class="floating-elements">
          <div class="floating-card card-1">
            <i class="fas fa-solar-panel"></i>
            <span>Solaire</span>
          </div>
          <div class="floating-card card-2">
            <i class="fas fa-tools"></i>
            <span>Maintenance</span>
          </div>
          <div class="floating-card card-3">
            <i class="fas fa-chart-line"></i>
            <span>Économies</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section features">
  <div class="container">
    <div class="features-grid">
      <div class="feature-badge">
        <i class="fas fa-building"></i>
        <span>Bâtiment et travaux publics</span>
      </div>
      <div class="feature-badge">
        <i class="fas fa-industry"></i>
        <span>Génie industriel</span>
      </div>
      <div class="feature-badge">
        <i class="fas fa-bolt"></i>
        <span>Réseaux électriques HTA/BTA</span>
