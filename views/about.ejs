<script>
  document.addEventListener('DOMContentLoaded', function() {
    loadProjets();
  });
  
  function loadProjets() {
    fetch('/api/projets')
      .then(response => response.json())
      .then(projets => {
        const gallery = document.getElementById('projetsGallery');
        
        if (projets.length === 0) {
          gallery.innerHTML = `
            <div class="process-step">
              <div class="step-number"><i class="fas fa-tools"></i></div>
              <div class="step-content">
                <h4>Projets en cours</h4>
                <p>Nos réalisations seront bientôt disponibles ici</p>
              </div>
            </div>
          `;
          return;
        }
        
        gallery.innerHTML = projets.map(projet => `
          <div class="process-step">
            <div class="step-number">
              ${projet.image ? `
                <img src="${projet.image}" alt="${projet.title}" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;">
              ` : `
                <i class="fas fa-project-diagram"></i>
              `}
            </div>
            <div class="step-content">
              <h4>${projet.title}</h4>
              <p>${projet.description}</p>
              <div style="margin-top: 1rem; font-size: 0.9rem; color: #6b7280;">
                <i class="fas fa-calendar"></i>
                ${new Date(projet.date).toLocaleDateString('fr-FR')}
                ${projet.client ? ` • ${projet.client}` : ''}
              </div>
            </div>
          </div>
        `).join('');
      })
      .catch(error => {
        console.error('Erreur chargement projets:', error);
        document.getElementById('projetsGallery').innerHTML = `
          <div class="process-step">
            <div class="step-number"><i class="fas fa-exclamation-triangle" style="color: #ef4444;"></i></div>
            <div class="step-content">
              <h4>Erreur de chargement</h4>
              <p>Impossible de charger les projets pour le moment</p>
            </div>
          </div>
        `;
      });
  }
</script>