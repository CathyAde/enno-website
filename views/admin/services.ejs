<%- include('../partials/admin-header', { title: 'Gestion des services' }) %>

<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Gestion des services</h1>
    <a href="/admin/services" class="text-sm text-blue-600 hover:text-blue-800">Réinitialiser</a>
  </div>

  <% if (success && success.length) { %>
    <div class="mb-4 rounded-md bg-green-50 p-4 text-green-700 border border-green-200"><%= success %></div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="mb-4 rounded-md bg-red-50 p-4 text-red-700 border border-red-200"><%= error %></div>
  <% } %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 bg-white shadow rounded-lg p-4">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-800">Liste des services</h2>
        <span class="text-sm text-gray-500"><%= services ? services.length : 0 %> service(s)</span>
      </div>

      <% if (!services || services.length === 0) { %>
        <div class="text-center py-8 text-gray-500">Aucun service pour le moment.</div>
      <% } else { %>
        <div class="divide-y divide-gray-200">
          <% services.forEach(s => { %>
            <div class="py-4 flex items-start justify-between">
              <div>
                <h3 class="text-base font-semibold text-gray-900"><%= s.title %></h3>
                <p class="text-sm text-gray-600 mt-1"><%= s.description ? (s.description.length > 140 ? s.description.substring(0,140) + '…' : s.description) : '' %></p>
                <% if (s.imageUrl) { %>
                  <p class="text-xs text-blue-600 mt-1 break-all"><%= s.imageUrl %></p>
                <% } %>
              </div>
              <div class="flex items-center gap-3">
                <a href="/admin/services/edit/<%= s.id %>" class="text-blue-600 hover:text-blue-800 text-sm">Éditer</a>
                <form action="/admin/services/<%= s.id %>/delete" method="POST" onsubmit="return confirm('Confirmer la suppression ?');">
                  <button type="submit" class="text-red-600 hover:text-red-800 text-sm">Supprimer</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <div class="bg-white shadow rounded-lg p-4">
      <h2 class="text-lg font-semibold text-gray-800 mb-4"><%= service ? 'Éditer le service' : 'Nouveau service' %></h2>
      <form method="POST" action="<%= service ? ('/admin/services/' + service.id) : '/admin/services' %>" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Titre *</label>
          <input name="title" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500" value="<%= service ? service.title : '' %>">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea name="description" rows="5" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500"><%= service ? service.description : '' %></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Image (URL)</label>
          <input name="imageUrl" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500" value="<%= service ? service.imageUrl || '' : '' %>">
        </div>
        <div class="flex items-center gap-3">
          <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md">
            <%= service ? 'Mettre à jour' : 'Créer' %>
          </button>
          <% if (service) { %>
            <a href="/admin/services" class="text-sm text-gray-600 hover:text-gray-800">Annuler</a>
          <% } %>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/admin-footer') %>